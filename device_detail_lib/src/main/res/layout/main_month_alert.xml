<?xml version="1.0" encoding="utf-8"?><!--月报警模板-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/alarm_bg"
    android:orientation="horizontal"

    >

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:src="@drawable/alert_img"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/main_alert_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定位漏水"
            android:textColor="#ff000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/main_alert_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-10-08 16:39:21"
            android:textColor="#999999"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/main_alert_btn"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="20dp"
        android:background="@drawable/circle_alert_bg"
        android:textColor="#fff"
         />

</LinearLayout>