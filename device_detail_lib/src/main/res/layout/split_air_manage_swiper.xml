<?xml version="1.0" encoding="utf-8" ?><!--设备管理  滑动删除-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <com.marshalchen.ultimaterecyclerview.swipe.SwipeLayout
        android:id="@id/recyclerview_swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:background="#FFFFFF"
            android:orientation="vertical"
            android:tag="Bottom3"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                >

                <Button
                    android:id="@+id/change"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="#867272"
                    android:text="修改"
                    android:textColor="@color/font_white" />

                <Button
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="#FF5534"
                    android:text="删除"
                    android:textColor="@color/font_white" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true">

<!--            <include layout="@layout/split_air_manage" />-->
            <include layout="@layout/dynamic_manage" />

        </LinearLayout>

    </com.marshalchen.ultimaterecyclerview.swipe.SwipeLayout>
</LinearLayout>
