<?xml version="1.0" encoding="utf-8"?><!--精密空调 详细信息-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <!--Toolbar-->
    <include
        android:id="@+id/insert_toolbar"
        layout="@layout/toolbar" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp">

                    <com.king.view.circleprogressview.CircleProgressView
                        android:id="@+id/cpv"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_gravity="center"
                        app:cpvLabelText="0℃"
                        app:cpvProgressColor="@color/colorPrimary"
                        app:cpvShowTick="false"
                        app:cpvStrokeWidth="5dp"
                        app:cpvLabelTextSize="20sp"
                        app:cpvNormalColor="#E5E5E5"
                        />

                    <TextView
                        android:id="@+id/temper_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="40dp"
                        android:text="温度适宜"
                        android:textColor="#ff333333"
                        android:textSize="14sp"

                        />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp">

                    <com.king.view.circleprogressview.CircleProgressView
                        android:id="@+id/cpv2"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_gravity="center"
                        app:cpvLabelText="0℃"
                        app:cpvProgressColor="@color/colorPrimary"
                        app:cpvShowTick="false"
                        app:cpvStrokeWidth="5dp"
                        app:cpvLabelTextSize="20sp"
                        app:cpvNormalColor="#E5E5E5"
                        />

                    <TextView
                        android:id="@+id/hum_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="40dp"
                        android:text="温度适宜"
                        android:textColor="#ff333333"
                        android:textSize="14sp"

                        />

                </FrameLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="20dp"

                >

                <TextView
                    android:id="@+id/refrigeration_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="18dp"
                    android:text="制冷状态"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/Refrigeration_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="30dp"
                    android:clickable="false" />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="10dp"

                >

                <TextView
                    android:id="@+id/dehumidification_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="18dp"
                    android:text="除湿状态"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/dehumidification_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="30dp"
                    android:clickable="false" />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="10dp"

                >

                <TextView
                    android:id="@+id/fan_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="18dp"
                    android:text="风机状态"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/fan_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="30dp"
                    android:clickable="false" />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="10dp"

                >

                <TextView
                    android:id="@+id/humidification_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="18dp"
                    android:text="加湿状态"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/humidification_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="30dp"
                    android:clickable="false" />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/heating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="18dp"
                    android:text="加热状态"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/heating_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="30dp"
                    android:clickable="false" />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/compressor_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="18dp"
                    android:text="压缩机状态"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/compressor_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="30dp"
                    android:clickable="false" />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="10dp"

                >

                <TextView
                    android:id="@+id/on_off_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="18dp"
                    android:text="开关机状态"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/on_off_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="30dp"
                    android:clickable="false" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#F5F5F5"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="11dp"
                    android:text="报警状态"
                    android:textColor="#ff000000"
                    android:textSize="16sp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="10dp"

                >

                <TextView
                    android:id="@+id/running_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="18dp"
                    android:text="运行状态"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/running_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="33dp"
                    android:text="正常"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="10dp"

                >

                <TextView
                    android:id="@+id/hot_gas_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="18dp"
                    android:text="热气通阀"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/hot_gas_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="33dp"
                    android:text="正常"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="10dp"

                >

                <TextView
                    android:id="@+id/high_voltage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="18dp"
                    android:text="高压报警"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/high_voltage_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="33dp"
                    android:text="正常"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="10dp"

                >

                <TextView
                    android:id="@+id/low_voltage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="18dp"
                    android:text="低压报警"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/low_voltage_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="33dp"
                    android:text="正常"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="10dp"

                >

                <TextView
                    android:id="@+id/high_temperature_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="18dp"
                    android:text="高温报警"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/high_temperature_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="33dp"
                    android:text="正常"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="10dp"

                >

                <TextView
                    android:id="@+id/low_temperature_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="18dp"
                    android:text="低温报警"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/low_temperature_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="33dp"
                    android:text="正常"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="10dp"

                >

                <TextView
                    android:id="@+id/high_hum_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="18dp"
                    android:text="高湿报警"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/high_hum_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="33dp"
                    android:text="正常"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="10dp"

                >

                <TextView
                    android:id="@+id/low_humidity_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="18dp"
                    android:text="低湿报警"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/low_humidity_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="33dp"
                    android:text="正常"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="10dp"

                >

                <TextView
                    android:id="@+id/power_failure_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="18dp"
                    android:text="电源故障报警"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/power_failure_alarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="33dp"
                    android:text="正常"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>