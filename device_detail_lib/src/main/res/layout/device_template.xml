<?xml version="1.0" encoding="utf-8"?>
<!--设备管理 实时数据-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/alarm_bg"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/device_icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温湿度传感器1"
            android:layout_marginStart="8dp"
            android:textColor="#ff333333"
            android:textSize="12sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/device_module"
            />

        <TextView
            android:id="@+id/module_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温湿度"
            android:textColor="#ff666666"
            android:layout_marginStart="8dp"

            android:textSize="12sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/device_pos"
            />

        <TextView
            android:id="@+id/device_manage_pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二楼东北角"
            android:layout_marginStart="8dp"
            android:textColor="#ff333333"
            android:textSize="12sp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/device_ip"
            />

        <TextView
            android:id="@+id/device_manage_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="192.168.1.166:3004"
            android:layout_marginStart="8dp"
            android:textColor="#ff333333"
            android:textSize="12sp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5"
        android:layout_marginTop="11dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"

        >


        <Button
            android:id="@+id/device_delete"
            android:layout_width="55dp"
            android:layout_height="22dp"
            android:background="@drawable/gray_btn_bg"
            android:text="删除"
            android:layout_marginEnd="10dp"
            android:textColor="@color/font_white"
            />

        <Button
            android:id="@+id/device_change"
            android:layout_width="55dp"
            android:layout_height="22dp"
            android:background="@drawable/green_btn_bg"
            android:text="编辑"
            android:textColor="@color/font_white"
            />

        <Button
            android:id="@+id/device_start"
            android:layout_width="55dp"
            android:layout_height="22dp"
            android:background="@drawable/alert_bg"
            android:text="开启"
            android:textColor="@color/font_white"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

</LinearLayout>