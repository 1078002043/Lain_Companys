<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/video_back_alert"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/user_icon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:text="用户头像"
        android:textColor="#ff333333"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/user_main_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/user_icon_title"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/user_main_icon"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:text="用户名称"
            android:textColor="#ff333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/user_info_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:gravity="center_vertical"
            android:hint="请输入用户名称"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="23dp"
            android:text="修改密码"
            android:textColor="#ff333333"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <EditText
                android:id="@+id/user_info_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:layout_marginEnd="24dp"
                android:gravity="center_vertical"
                android:hint="不修改可不填"
                android:textSize="12sp" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="23dp"
            android:text="确认密码"
            android:textColor="#ff333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/user_info_re_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:gravity="center_vertical"
            android:hint="不修改可不填"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="23dp"
            android:text="联系电话"
            android:textColor="#ff333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/user_info_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:gravity="center_vertical"
            android:hint="请输入联系电话"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="23dp"
            android:text="电子邮箱"
            android:textColor="#ff333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/user_info_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="24dp"
            android:gravity="center_vertical"
            android:hint="请输入电子邮箱"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            >

            <Button
                android:id="@+id/user_change_right"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginStart="27dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:background="@drawable/split_bg"
                android:text="修改"
                android:textColor="@color/font_white" />

            <Button
                android:id="@+id/user_change_cancel"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="27dp"
                android:layout_weight="1"
                android:background="@drawable/video_back_cancel"
                android:text="取消" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>