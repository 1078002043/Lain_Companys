<?xml version="1.0" encoding="utf-8" ?><!--用户管理 管理员-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:background="#fff"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/user_manage_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"

            android:layout_marginEnd="15dp"
            android:padding="1dp"
            android:src="@drawable/user_manage" />

        <TextView
            android:id="@+id/super_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="admin2A" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="一楼机房A102"
            android:visibility="gone"
            />

        <com.nex3z.flowlayout.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_tag_view"
            android:layout_marginTop="10dp"
            >

        </com.nex3z.flowlayout.FlowLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/phone_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/phone_icon" />

                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="15777759320"
                    android:textColor="#ff999999"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/email_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/email_icon" />

                <TextView
                    android:id="@+id/email_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="15777759320"
                    android:textColor="#ff999999"
                    android:textSize="12sp" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="9dp"
            android:background="#F5F5F5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="9dp"
            android:gravity="end">

            <Button
                android:id="@+id/user_del"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/user_btn_bg"
                android:text="删除" />

            <Button
                android:id="@+id/user_change"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="17dp"
                android:background="@drawable/blue_btn"
                android:text="编辑"
                android:textColor="@color/font_white" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>